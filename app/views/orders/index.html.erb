<% content_for :navigation do %>
    <%= currently_at 'Transactions' %>
    </div>
<% end %>
<div class="row-fluid">
  <div class="span12">
    <div class="head clearfix">
      <h1>
        <i class="icon-tasks"></i> Orders</h1>
    </div>
    <div class="block-fluid accordion">
      <% @orders.each do |month, orders| %>
          <h3><%= month.strftime('%B %Y') %></h3>
          <div>
            <table cellpadding="0" cellspacing="0" width="100%" class="sOrders">
              <thead>
              <tr>
                <th width="60">Date</th><th>Transaction Id</th><th>Transaction Type</th><th>Name of Item</th><th>Status</th><th width="60">-N- Price</th> <th></th>
              </tr>
              </thead>
              <tbody>
              <% orders.each do |order| %>
                  <tr>
                    <td><span class="date"><%= MONTH[order.created_at.month-1]%> <%= order.created_at.day.to_i %></span><span class="time">12:35</span></td>
                    <td><%= order.transaction_id %></td>
                    <td><%= order.item_type %></td>
                    <td><a href="<%= order_url(order) %>"><%= order.item.name.humanize %></a></td>
                    <td><%= link_to order.state,order_url(order) %></td>
                    <td><span class="price"><%= order.item.price %></span></td>
                    <td><%= link_to "View Order", order_url(order), class: "btn btn-info" %></td>
                  </tr>
              <% end %>
              </tbody>
              <tfoot>

              </tfoot>
            </table>
          </div>
      <% end %>
    </div>
  </div>
</div>
