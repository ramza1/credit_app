<% content_for :navigation do %>
    <%= currently_at 'Transactions' %>
    </div>
<% end %>
<div class="page-header">
  <h1>Order</h1>
</div>

<div class="row-fluid">

  <div class="span12">
    <div class="row-fluid">    <div class="head clearfix">
      <h1><i class="icon-tasks"></i> <%= @order.type %></h1>
    </div>
        <div class="block-fluid ucard">

          <div class="info">
            <ul class="rows">
              <li>
                <div class="title">Transaction ID:</div>
                <div class="text"><%= @order.transaction_id %></div>
              </li>
              <li>
                <div class="title">Transaction Type:</div>
                <div class="text"><%= @order.item_type %></div>
              </li>
              <li>
                <div class="title">Name:</div>
                <div class="text"><%= @order.item.name.humanize %></div>
              </li>
              <li>
                <div class="title">Amount:</div>
                <div class="text"><%= @order.item.price %></div>
              </li>
              <li>
                <div class="title">Order Status:</div>
                <div class="text">
                  <%= @order.state %>
                  <% if @order.ready_to_process? %>
                    <small>Please note that all orders that are not complete under a short period of time will be deleted</small>
                  <% end %>
                </div>
              </li>
            </ul>
              <% if @order.ready_to_process? %>
                  <%= payment_form_for_order(@order) %>
               <% end %>
          </div>
        </div>
    </div>
  </div>

</div>