<% content_for :navigation do %>
    <%= currently_at '' %>
    </div>
<% end %>
<div class="page-header">
  <h1>Edit Profile<small> Update your profile information</small>
  <span style="float: right;"><%= link_to "Advanced Settings", edit_user_registration_path, class: "btn btn-danger" %></span>
  </h1>
</div>

<div class="row-fluid">
  <div >
    <%= form_for @user do |f| %>
    <div class="head clearfix">
      <div class="isw-documents"></div>
      <h1>Basic Info</h1>
    </div>
    <div class="block-fluid">

      <div class="row-form clearfix">
        <div class="span3">Your Full Name:</div>
        <div class="span9"><%= f.text_field :name, placeholder: "Enter Your full Name here" %></div>
      </div>

      <div class="row-form clearfix">
        <div class="span3">Phone Number:</div>
        <div class="span9"><%= f.text_field :phone_number, placeholder: "Your Mobile Phone number" %></div>
      </div>

      <div class="footer tar">
        <%= f.submit "update",class: "btn" %>
      </div>
    <% end %>
    </div>

  </div>

</div>
