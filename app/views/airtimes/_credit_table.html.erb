<div class="row-fluid">

  <div class="span12">
    <div class="head clearfix">
      <div class="isw-grid"></div>
      <h1>All Airtimes</h1>
    </div>
    <div class="tool_bar">
      <%=  paginate("users","index",class:"pull-right page")  %>
     <%= form_tag airtime_search_path, method: :post, class: "form-inline pull-right" do %>
        <div class="input-append">
          <%= text_field_tag "pin", "" %><button class="btn" type="button"><i class="icon-search"></i></button>
        </div>
      <% end %>
    </div>
    <div class="block-fluid table-sorting clearfix">
      <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
        <thead>
        <tr>
          <th width="25%">Name</th>
          <th width="25%">Pin</th>
          <th width="25%">Status</th>
          <th width="25%"></th>
          <th width="25%"></th>
          <th width="25%"></th>
        </tr>
        </thead>
        <tbody>
        <% @airtimes.order(:card_type).each do |airtime|%>
        <tr>
          <td><%= airtime.name.humanize %></td>
          <td><%= airtime.pin %></td>
          <td><%= airtime.state.humanize %></td>
          <td><%= link_to "Edit", edit_airtime_path(airtime), class: "btn" %></td>
          <td><%= link_to "View", airtime_path(airtime), class: "btn" %></td>
          <td><%= link_to "Delete", airtime, :method => :delete, :data => {:confirm => "Are you sure"}, class: "btn btn-danger" %></td>
        </tr>
        <% end %>


        </tbody>
      </table>
    </div>
  </div>

</div>