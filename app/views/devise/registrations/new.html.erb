<div class="drop"></div>
<div class="container">
<div id="form_wrap">
  <div class="login">
    <div class="header-a">
      <h1>Sign Up</h1>
    </div>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal letter_pressed"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="control-group">
          <label for="inputPhoneNumber">Phone Number</label>
          <div class="input-wrap">
          <%= f.text_field :phone_number, id: "inputPhoneNumber", placeholder: "Phone Number" %>
          </div>
        </div>
        <div class="control-group">
          <label for="inputEmail">Email</label>
          <div class="input-wrap">
          <%= f.text_field :email, id: "inputEmail", placeholder: "Email" %>
          </div>
        </div>
        <div class="control-group">
          <label for="inputPassword">Password</label>
          <div class="input-wrap">
          <%= f.password_field :password, id: "inputPassword", placeholder: "Password" %>
          </div>
        </div>
        <div class="control-group">
          <label for="inputPasswordConfirmation">Re-Type Password</label>
          <div class="input-wrap">
          <%= f.password_field :password_confirmation, id: "inputPasswordConfirmation", placeholder: "Password" %>
          </div>
        </div>
        <div class="">
          <% if devise_mapping.rememberable? -%>
              <div class="control-group">
                <label class="checkbox"><%= f.check_box :remember_me %> Remember Me</label>
              </div>
          <% end %>
        </div>
        <div class="row-fluid">
          <div class="form-actions">
            <%= f.submit "Join Us", class: "btn btn-primary" %></div>
          </div>
    <% end %>

    <div class="footer-a letter_pressed ">
      <div class="row-fluid">
      <div class="span8">
        <p>Already a member?</p>
      </div>
      <div class="span1"></div>
      <div class="btn-wrap span3 change">
        <a href="<%= url_for new_user_session_path %>" class="btn btn-warning" title="sign up">Sign In</a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
