
<div class="page-header">
  <h1>Pin Request Confirmation <small>Poploader</small>
    <% if @order.pending? %>
    <span style="float: right;"><%= link_to "Cancel Pin Request", @order, :method => :delete, data: {confirm: "Are you sure"}, class: "btn btn-danger" %></span>
    <% end %>
        </h1>
</div>

<div class="row-fluid">

  <div class="span12">
    <div class="row-fluid">
      <div class="span9">
        <div class="block-fluid ucard">

          <div class="info">
            <ul class="rows">
              <li class="heading">Recharge Card Pin Purchase Confirmation</li>
              <li>
                <div class="title">Order ID:</div>
                <div class="text">#00<%= @order.id %></div>
              </li>
              <li>
                <div class="title">Name:</div>
                <div class="text"><%= @order.credit.name.humanize %></div>
              </li>
              <li>
                <div class="title">Amount:</div>
                <div class="text"><%= @order.credit.price %></div>
              </li>
              <li>
                <div class="title">Order Status:</div>
                <div class="text">
                  <%= @order.state %>
                  <% if @order.ready_to_process? %>
                    <small>Please note that all orders that are not complete under a short period of time will be deleted</small>
                  <% end %>
                </div>
              </li>
              <% if @order.ready_to_process? %>
              <li>
                <div class="title">Purchase</div>
                <div class="text">
                  <%= link_to "Purchase from funds", checkout_path, class: "btn btn-small" %>
                  <form method='POST' action='https://voguepay.com/pay/'>

                    <input type='hidden' name='v_merchant_id' value='<%= MERCHANT_ID %>' />
                    <input type='hidden' name='transaction_id' value='<%= @order.id %>' />
                    <input type='hidden' name='memo' value='<%= current_user.email %>  purchasing <%= @order.credit.name.humanize %>' />

                    <input type='hidden' name='notify_url' value='<%= url_for single_notify_url %>' />
                    <input type='hidden' name='success_url' value='<%= url_for thank_you_url %>' />
                    <input type='hidden' name='fail_url' value='<%= url_for failure_url %>' />

                    <input type='hidden' name='total' value='<%= @order.credit.price %>' />

                    <input type='image' src='http://voguepay.com/images/buttons/buynow_grey.png' alt='Submit' />

                  </form>
                </div>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>