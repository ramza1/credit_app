
<div class="page-header">
  <h1>Profile info <small>Poploader</small> <span style="float: right;"><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-danger" %></span> </h1>
</div>

<div class="row-fluid">

  <div class="span6">
    <div class="row-fluid">
      <div class="span3">
        <div class="ucard clearfix">
          <div class="right">
            <ul class="control">
              <li><span class="icon-pencil"></span> <a href="<%= edit_user_path(@user) %>">Edit</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="span9">
        <div class="block-fluid ucard">

          <div class="info">
            <ul class="rows">
              <li class="heading">Profile info</li>
              <li>
                <div class="title">Name:</div>
                <div class="text"><%= @user.name %></div>
              </li>
              <li>
                <div class="title">Phone Number:</div>
                <div class="text"><%= @user.phone_number %></div>
              </li>
              <li>
                <div class="title">Email:</div>
                <div class="text"><%= @user.email %></div>
              </li>
              <li>
                <div class="title">Recurrent Billing</div>
                <div class="text"><%= @user.subscription_duration %></div>
              </li>
              <li>
                <div class="title">Sms Notification</div>
                <div class="text"><%= @user.sms_notification? ? "Yes" : "No" %></div>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="span6">
    <div class="head clearfix">
      <div class="isw-archive"></div>
      <h1>Orders</h1>
    </div>
    <div class="block-fluid accordion">
      <% @user.orders.group_by{ |t| t.created_at.beginning_of_month }.each do |month, orders| %>
          <h3><%= month.strftime('%B %Y') %></h3>
          <div>
            <table cellpadding="0" cellspacing="0" width="100%" class="sOrders">
              <thead>
              <tr>
                <th width="60">Date</th><th>Name of transaction</th><th width="60">-N- Price</th>
              </tr>
              </thead>
              <tbody>
              <% orders.first(3).each do |order| %>
                  <tr>
                    <td><span class="date"><%= MONTH[order.created_at.month-1]%> <%= order.created_at.day.to_i %></span><span class="time">12:35</span></td>
                    <td><a href="#"><%= order.name.humanize %></a></td>
                    <td><span class="price"><%= order.amount %></span></td>
                  </tr>
              <% end %>
              </tbody>
              <tfoot>
              <tr>
                <td colspan="3" align="right"><%= link_to "more", orders_path, class: "btn btn-small" %></td>
              </tr>
              </tfoot>
            </table>
          </div>
      <% end %>
    </div>
  </div>

</div>