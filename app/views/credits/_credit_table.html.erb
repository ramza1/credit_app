<div class="row-fluid">

  <div class="span12">
    <div class="head clearfix">
      <div class="isw-grid"></div>
      <h1>Sortable table</h1>
    </div>
    <div class="block-fluid table-sorting clearfix">
      <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
        <thead>
        <tr>
          <th><input type="checkbox" name="checkall"/></th>
          <th width="25%">Name</th>
          <th width="25%">Pin</th>
          <th width="25%">Edit</th>
          <th width="25%">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% Credit.open_credits.order(:card_type).each do |credit|%>
        <tr>
          <td><input type="checkbox" name="checkbox"/></td>
          <td><%= credit.name.humanize %></td>
          <td><%= credit.pin %></td>
          <td><%= link_to "Edit", edit_credit_path(credit), class: "btn" %></td>
          <td><%= link_to "Delete", credit, :method => :delete, :data => {:confirm => "Are you sure"}, class: "btn btn-danger" %></td>
        </tr>
        <% end %>


        </tbody>
      </table>
    </div>
  </div>

</div>