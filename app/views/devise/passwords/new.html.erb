<div class="loginBox">
  <div class="bLogo"></div>
  <div class="loginForm">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><span class="icon-envelope"></span></span>
            <%= f.text_field :email, id: "inputEmail", placeholder: "Email" %>
          </div>
        </div>
        <div class="row-fluid">
          <% if devise_mapping.rememberable? -%>
              <div class="span4">
                <%= render "devise/shared/links" %>
              </div>
          <% end %>
          <div class="span8">
            <%= f.submit "Send me reset password instructions", class: "btn btn-block" %>
          </div>
        </div>
    <% end %>
    <div class="row-fluid">
      <div class="span4 white">
        <p>Follow us: <a href="#" class="tip" title="twitter"><img src="/assets/img/twitter.png"/></a></p>
      </div>
      <div class="span1"></div>
      <div class="span7 change">
        <p><a href="<%= url_for new_user_registration_path %>" class="tip" title="sign up">Create an account</a></p>
      </div>
    </div>
  </div>
</div>


