
<div class="span4">
  <div class="head clearfix">
    <div class="isw-list"></div>
    <h1>Messages</h1>
  </div>
  <div class="block messages scrollBox">
    <div class="scroll" style="height: 270px;">
    <% if @messages.empty? %>
       <small>No Messages available at the moment</small>
    <% else %>
    <% @messages.each do |message| %>
        <div class="item clearfix">
          <div class="info" style="padding: 0;">
            <a href="#" class="name"><%= message.credit.name.humanize %></a>
            <% if message.state == "complete" %>
              <p>You have purchased this <b><%= message.credit.one_click %></b></p>
            <% end %>
            <span><%= message.created_at.day %> <%= MONTH[message.created_at.month-1]%>  <%= message.created_at.strftime("%Y") %> <%= message.created_at.strftime("%I:%M%p") %></span>
          </div>
        </div>
    <% end %>
    <% end %>
   </div>
  </div>
</div>