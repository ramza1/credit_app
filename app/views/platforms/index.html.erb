<% content_for :navigation do %>
    <%= currently_at 'Platforms' %>
<% end %>

<div class="page-header">
  <h1>Platforms</h1>
</div>


<div class="row-fluid">

  <div class="span12">
    <div class="head clearfix">
      <div class="isw-grid"></div>
      <h1>All Platforms</h1>
      <span class="button-bar"><%= link_to 'New Platform', new_platform_path ,:class=>"btn btn-primary"%></span>
      </div>
    <div class="block-fluid table-sorting clearfix">
      <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
        <thead>
        <tr>
          <th><input type="checkbox" name="checkall"/></th>
          <th width="25%">Operating System</th>
          <th width="25%">Downloads</th>
          <th width="25%">View</th>
          <th width="25%">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% @platforms.each do |platform|%>
            <tr>
              <td><input type="checkbox" name="checkbox"/></td>
              <td><%= platform.os_name.humanize %></td>
              <td><%= platform.download_count %></td>
              <td><%= link_to "View", platform, class: "btn" %></td>
                    <td><%= link_to "Delete", platform, :method => :delete, :data => {:confirm => "Are you sure"}, class: "btn btn-danger" %></td>
                          </tr>
                      <% end %>


                      </tbody>
                      </table>
                      </div>
                      </div>

                      </div>