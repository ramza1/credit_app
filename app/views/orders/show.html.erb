<% content_for :navigation do %>
    <%= currently_at 'Transactions' %>
    </div>
<% end %>
<div class="page-header">
  <h1>Order</h1>
</div>

<div class="row-fluid">

  <div class="span12">
    <div class="row-fluid">
      <%= order_status(@order)%>
      <div class="head clearfix">
      <h1><i class="icon-tasks"></i> Details</h1>
    </div>
        <div class="block-fluid ucard">

          <div class="info">
            <ul class="rows letter_pressed">
              <li>
                <div class="title">Transaction Ref:</div>
                <div class="text"><%= @order.transaction_id %></div>
              </li>
              <li>
                  <div class="title">Item Type:</div>
                <div class="text"><%= @order.item_type %></div>
              </li>
              <li>
                <div class="title">Item Name:</div>
                <div class="text"><%= @order.item.name  %></div>
              </li>
              <li>
                <div class="title">Amount:</div>
                <div class="text"><%= number_to_currency @order.amount, unit: "â‚¦" , precision: 0%></div>
              </li>
              <li>
                <div class="title">Order Status:</div>
                <div class="text">
                  <span class="label label-<%= class_for_status(@order.state) %>"><%= @order.state %></span>
                  <% if @order.ready_to_process? %>
                    <small>Please note that all orders that are not complete under a short period of time will be deleted</small>
                  <% end %>
                </div>
              </li>
            </ul>
              <% if @order.ready_to_process? %>
                  <%= payment_form_for_order(@order) %>
               <% end %>
          </div>
        </div>
    </div>
  </div>

</div>

<div class="modal hide fade in" id="payment_dialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-body">

  </div>
</div>
