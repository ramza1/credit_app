<p id="notice"><%= notice %></p>
<% content_for :navigation do %>
    <%= currently_at 'Platforms' %>
<% end %>

<div class="page-header">
  <h1><%= @platform.os_name %></h1>
</div>
<div class="row-fluid">

  <div class="span12">
    <div class="head clearfix">
      <h1>Releases</h1>
      <span class="button-bar"><%= link_to 'New Release',new_platform_releases_path(@platform),:class=>"btn btn-primary"%></span>
    </div>
    <div class="block-fluid table-sorting clearfix">
      <table cellpadding="0" cellspacing="0" width="100%" class="table" id="tSortable">
        <thead>
        <tr>
          <th width="25%">Version</th>
          <th width="25%">Download</th>
          <th width="25%">Delete</th>
        </tr>
        </thead>
        <tbody>
        <% @platform.releases.each do |release|%>
            <tr>
              <td><%= release.version.humanize %></td>
              <td><%= link_to "Download",release.dist.url, class: "btn" %></td>
                    <td><%= link_to "Delete", platform_releases_path(@platform,release), :method => :delete, :data => {:confirm => "Are you sure"}, class: "btn btn-danger" %></td>
                          </tr>
                      <% end %>


                      </tbody>
                      </table>
                      </div>
                      </div>

                      </div>
<%= link_to 'Edit', edit_platform_path(@platform) %> |
<%= link_to 'Back', platforms_path %>
