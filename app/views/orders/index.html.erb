<% content_for :navigation do %>
    <%= currently_at 'Transactions' %>
    </div>
<% end %>
<div class="row-fluid">
  <div class="span12">
    <div class="tab-host clearfix">
      <ul class="nav nav-tabs">
        <li class="active">
          <a href="<%= url_for orders_url%>">
            My Transactions
            <div class="tape"></div>
          </a>
        </li>
        <li >
          <a href="<%= url_for interswitch_transactions_url %>">
            Interswitch Transactions
            <div class="tape"></div>
          </a>
        </li>
        <li >
          <a href="<%= url_for wallet_transactions_url %>">
            Wallet Transactions
            <div class="tape"></div>
          </a>
        </li>
      </ul>
    </div>
    <div class="transactions">
      <% @orders.each do |month, orders| %>
          <h3 class="light_header letter_pressed">Transaction History <%= month.strftime('%B %Y') %></h3>
          <div>
            <table cellpadding="0" cellspacing="0" width="100%" class="table table-hover transaction_table sOrders">
              <thead>
              <tr>
                <th width="60">Date</th><th>Transaction Id</th><th>Item Type</th><th>Item Name</th><th>Status</th><th width="60">"₦" Amount</th> <th></th>
              </tr>
              </thead>
              <tbody>
              <% orders.each do |order| %>
                  <tr class="<%= class_for_status(order.state) %> letter_pressed">
                    <td><span class="date"><%= MONTH[order.created_at.month-1]%> <%= order.created_at.day.to_i %></span><span class="time">12:35</span></td>
                    <td><%= order.transaction_id %></td>
                    <td><%= order.item_type %></td>
                    <td><a href="<%= order_url(order) %>"><%= order.item.name %></a></td>
                    <td><%= link_to order.state,order_url(order) %></td>
                    <td><span class="price"><%= number_to_currency order.amount, unit: "₦" , precision: 0%></span></td>
                    <td><%= link_to "view", order_url(order), class: " btn " %></td>
                  </tr>
              <% end %>
              </tbody>
              <tfoot>

              </tfoot>
            </table>
          </div>
      <% end %>
    </div>
  </div>
</div>
