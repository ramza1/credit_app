<% content_for :navigation do %>
    <%= currently_at 'Transactions' %>
    </div>
<% end %>
<div class="page-header">
  <h1>My Transactions</h1>
        </div>

        <div class="row-fluid">
          <div class="">
            <div class="head clearfix">
              <div class="isw-archive"></div>
              <h1>All transactions</h1>
            </div>
            <div class="block-fluid accordion">
              <% @user.orders.group_by{ |t| t.created_at.beginning_of_month }.each do |month, orders| %>
                  <h3><%= month.strftime('%B %Y') %></h3>
                  <div>
                    <table cellpadding="0" cellspacing="0" width="100%" class="sOrders">
                      <thead>
                      <tr>
                        <th width="60">Date</th><th>Name of transaction</th><th width="60">-N- Price</th>
                      </tr>
                      </thead>
                      <tbody>
                      <% orders.first(3).each do |order| %>
                          <tr>
                            <td><span class="date"><%= MONTH[order.created_at.month-1]%> <%= order.created_at.day.to_i %></span><span class="time">12:35</span></td>
                            <td><a href="#"><%= order.item.name.humanize %></a></td>
                            <td><span class="price"><%= order.amount %></span></td>
                          </tr>
                      <% end %>
                      </tbody>
                      <tfoot>
                      <tr>
                        <td colspan="3" align="right"><%= link_to "more", orders_path, class: "btn btn-small" %></td>
                              </tr>
                              </tfoot>
                              </table>
                              </div>
                          <% end %>
                          </div>
                          </div>

                          </div>