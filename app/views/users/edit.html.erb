<div class="page-header">
  <h1>Settings<small> Update your personal settings</small>
  <span style="float: right;"><%= link_to "Advanced Settings", edit_user_registration_path, class: "btn btn-danger" %></span>
  </h1>
</div>

<div class="row-fluid">
  <div class="span12">
    <%= form_for @user do |f| %>
    <div class="head clearfix">
      <div class="isw-documents"></div>
      <h1>Basic Info</h1>
    </div>
    <div class="block-fluid">

      <div class="row-form clearfix">
        <div class="span3">Your Full Name:</div>
        <div class="span9"><%= f.text_field :name, placeholder: "Enter Your full Name here" %></div>
      </div>

      <div class="row-form clearfix">
        <div class="span3">Phone Number:</div>
        <div class="span9"><%= f.text_field :phone_number, placeholder: "Your Mobile Phone number" %></div>
      </div>

      <div class="footer tar">
        <%= f.submit class: "btn" %>
      </div>
    <% end %>
    </div>

  </div>

</div>

<div class="dr"><span></span></div>


<div class="row-fluid">

  <div class="span6">
    <%= form_for @user do |f| %>
    <div class="head clearfix">
      <div class="isw-cloud"></div>
      <h1>Sms Notification</h1>
    </div>
    <div class="block-fluid">

      <div class="row-form clearfix">
        <div class="span4">Enable SMS Notification</div>
        <div class="span8"><%= f.check_box :sms_notification %> <span>Please Note that enabling sms notification will cost 3 naira per sms</span></div>
      </div>

      <div class="footer tal">
        <%= f.submit class: "btn" %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="span6">
    <div class="head clearfix">
      <div class="isw-ok"></div>
      <h1>Recurrent Billing</h1>
    </div>
    <div class="block-fluid">
      <%=form_for @user do |f| %>

        <div class="row-form clearfix">
          <div class="span3">Notification Duration</div>
          <div class="span9"><%= f.select :subscription_duration, [["Select a subscription duration", nil], ["Daily", "daily"], ["Monthly", "monthly"], ["Weekly", "weekly"]] %>
            <span>You get receive daily, weekly, monthly sms and email notifications for credit</span></div>
        </div>

        <div class="footer tar">
          <button class="btn">Submit</button>
        </div>

      <% end %>
    </div>

  </div>

</div>

<div class="dr"><span></span></div>
