<% if flash.any? %>
    <div class="notice">
      <% flash.each do |name, msg| %>
          <div class="alert shadowed alert-<%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= msg %>
          </div>
      <% end %>
    </div>
<% end %>

<%= form_for @message do |f| %>
  <div id="et_contact_left">

    <% if @message.errors.any? %>
        <div class="alert alert-error">
          <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent</h2>

          <ul>
            <% @message.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p class="clearfix">
      <%= f.text_field :name, placeholder: "Name" %>
    </p>

    <p class="clearfix">
      <%= f.text_field :email, placeholder: "Email Address" %>
    </p>

    <p class="clearfix">
      <%= f.text_field :subject, placeholder: "Subject" %>
    </p>
  </div> <!-- #et_contact_left -->


  <div class="clear"></div>

  <p class="clearfix">
    <%= f.text_area :content, placeholder: "Message here", rows: 4, cols: 4 %>
  </p>

  <button type="submit" class="btn btn-primary btn-primary">Submit</button>

<% end %>