<div class="loginBox">
  <div class="bLogo"></div>
  <div class="loginForm">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><span class="icon-envelope"></span></span>
            <%= f.text_field :email, id: "inputEmail", placeholder: "Email" %>
          </div>
        </div>
        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><span class="icon-hand-right"></span></span>
            <%= f.text_field :phone_number, id: "inputEmail", placeholder: "Phone Number" %>
          </div>
        </div>
        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><span class="icon-lock"></span></span>
            <%= f.password_field :password, id: "inputPassword", placeholder: "Password" %>
          </div>
        </div>
        <div class="control-group">
          <div class="input-prepend">
            <span class="add-on"><span class="icon-lock"></span></span>
            <%= f.password_field :password_confirmation, id: "inputPassword", placeholder: "Password" %>
          </div>
        </div>
        <div class="row-fluid">
          <% if devise_mapping.rememberable? -%>
              <div class="span8">
                <%= render "devise/shared/links" %>
              </div>
          <% end %>
          <div class="span4">
            <%= f.submit "Sign Up", class: "btn btn-block" %>
          </div>
        </div>
    <% end %>
    <div class="row-fluid">
      <div class="span8 white">
        <p>Or use on of this services: <a href="#" class="tip" title="facebook"><img src="/assets/img/facebook.png"/></a> <a href="#" class="tip" title="twitter"><img src="/assets/img/twitter.png"/></a> <a href="#" class="tip" title="google"><img src="/assets/img/google.png"/></a></p>
      </div>
      <div class="span1"></div>
      <div class="span3 change">
        <p><a href="#" class="tip" title="Registration">Join us</a></p>
      </div>
    </div>
  </div>
</div>

