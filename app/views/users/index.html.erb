<% content_for :navigation do %>
    <%= currently_at 'Users' %>
    </div>
<% end %>

<div class="page-header">
  <h1>Users</h1>
</div>
<div class="row-fluid">
  <% if @users.any? %>
      <div class="span12">
        <div class="head clearfix">
          <div class="isw-grid"></div>
          <h1>Customers</h1>
        </div>
        <div class="transactions ">
          <div class="tool_bar">
            <%=  paginate("users","index",class:"pull-right page")  %>
                <form class="form-inline pull-right">
                  <div class="input-append">
                    <input   type="text"><button class="btn" type="button"><i class="icon-search"></i></button>
                  </div>
                </form>
                </div>
          <table cellpadding="0" cellspacing="0" width="100%" class="table">
            <thead>
            <tr>
              <th width="25%">Phone Number</th>
              <th width="25%">Amount balance</th>
              <th width="25%">Email</th>
              <th width="25%">Last login</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |user| %>
                <tr>
                  <td><%= user.phone_number %></td>
                  <td><%= number_to_currency user.wallet.account_balance, unit: "â‚¦" %></td>
                  <td><%= user.email %></td>
                  <td><%= user.last_sign_in_at %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="dr"><span></span></div>
  <% end %>
</div>
