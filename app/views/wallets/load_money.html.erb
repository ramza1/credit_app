<% content_for :navigation do %>
    <%= currently_at 'Wallet' %>
    </div>
<% end %>
<div class="page-header">
  <h1>My Wallet</h1>
</div>

<div class="row-fluid">
  <div class="tab-host clearfix">
    <ul class="nav nav-tabs">
      <li >
        <a href="<%= url_for account_user_wallet_url(current_user) %>">
          Account
          <div class="tape"></div>
        </a>
      </li>
      <li class="active">
        <a href="<%= url_for load_money_user_wallet_url(current_user) %>">
          Load Money
          <div class="tape"></div>
        </a>
      </li>
    </ul>
  </div>
  <div class="block messages">
    <%= simple_form_for(@order, :url => deposit_user_wallet_path(current_user),:html=>{:class=>"form-horizontal form_box form-inline"}) do |f| %>
     <fieldset>
          <div class="control-group input_padding_extra">
            <%= f.error_notification %>
            <label class="control-label" for="deposit">Enter an Amount to Load</label>
            <div class="controls load-money-controls">
              <div class="input-prepend input-append span12">
                <span class="add-on">₦</span>
                <%= f.input :amount,:label_html => { :class => 'hide' } , :wrapper_html => { :class => 'load_input span8' },:input_html => { :class => 'span12',:placeholder=>"Enter a valid amount between 0 and 100000. it must be a whole number"  } %>

                <button type="submit" class="btn btn-primary" type="button">Proceed</button>
              </div>
            </div>
          </div>
        </fieldset>
    <% end %>
    <div class="modal hide fade in" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Modal header</h3>
      </div>
      <div class="modal-body">
        <p>One fine body…</p>
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>