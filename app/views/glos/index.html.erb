<% content_for :navigation do %>
    <%= currently_at 'Glo' %>
    </div>
<% end %>
<div class="row-fluid">

  <div>
  <div class="head clearfix">
    <h1><i class="network_icon glo_icon"></i>  GLO Recharg Cards</h1>
  </div>
  <div class="block-fluid">
    <table cellpadding="0" cellspacing="0" width="100%" class="table">
      <thead>
      <tr>
        <th width="25%">Amount</th>
        <th width="25%">Pin</th>
      </tr>
      </thead>
      <tbody>
      <% @glo_credit.each do |mtn_credit| %>
          <tr>
            <td><%= mtn_credit.name.humanize %></td>
            <td><%= link_to "Request For Pin", purchase_path(:name => mtn_credit.name), class: "btn btn-small" %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

</div>
