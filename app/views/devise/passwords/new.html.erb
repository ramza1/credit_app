<div class="drop"></div>
<div class="container">
  <div id="form_wrap">
    <div class="login">
      <div class="header-a">
        <h1>Forgot Password</h1>
      </div>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
        <%= devise_error_messages! %>
          <div class="control-group">
            <label for="inputEmail">Email</label>
            <div class="input-wrap">
              <%= f.text_field :email, id: "inputEmail", placeholder: "Email" %>
            </div>
          </div>
        <div class="row-fluid">
          <div class="row-fluid">
            <div class="form-actions">
              <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %></div>
                  </div>
        </div>
    <% end %>
            <div class="footer-a letter_pressed ">
              <div class="row-fluid">
                <div class="btn-wrap change">
                  <a href="<%= url_for new_user_session_path %>" class="btn btn-warning" title="sign up">Sign In</a>
                  <a href="<%= url_for new_user_registration_path %>" class="btn btn-warning" title="sign up">Sign Up</a>
                </div>
              </div>
            </div>
  </div>
</div>
            </div>

